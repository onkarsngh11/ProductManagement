<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
    <li class="nav-item" style="margin-right:5px">
        <a asp-controller="Cart" asp-action="Index">
            <img src="~/images/cart.png" />
            <div id="ItemsinCartCount">
                @ViewData["TotalProducts"]
            </div>
        </a>
    </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Hello @User.Claims.Where(claim=>claim.Type=="UserName").FirstOrDefault().Value </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Auth" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            @Html.ActionLink("Login", "Login", "Auth", null, new { @style = "bold", @class = "nav-link text-dark" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Register", "Register", "Auth", null, new { @style = "bold", @class = "nav-link text-dark" })
        </li>
    }
</ul>
