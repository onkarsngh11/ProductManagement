@model   ProductManagement.Entities.Models.ProductsModel
@{
    ViewData["Title"] = "Update Product";
}

<h1>Update Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" encType="multipart/form-data" method="post">
            @Html.HiddenFor(model => model.ProductId)
            @Html.HiddenFor(model => model.ImageUrl)
            @Html.HiddenFor(model => model.Image)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="col-sm-12">
                    <input asp-for="UploadedFiles" class="form-control custom-file-input" multiple />
                    <label class="custom-file-label form-control">Choose different Image...</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
    </script>
}
